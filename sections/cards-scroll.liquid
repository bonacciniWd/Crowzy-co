<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Text Scrambler para "Underground Streetwear"
    class TextScramble {
      constructor(el) {
        this.el = el;
        this.chars = '01010010101001001000101010101';
        this.update = this.update.bind(this);
      }
      
      setText(newText) {
        const oldText = this.el.innerText;
        const length = Math.max(oldText.length, newText.length);
        const promise = new Promise((resolve) => this.resolve = resolve);
        this.queue = [];
        
        for (let i = 0; i < length; i++) {
          const from = oldText[i] || '';
          const to = newText[i] || '';
          const start = Math.floor(Math.random() * 40);
          const end = start + Math.floor(Math.random() * 40);
          this.queue.push({ from, to, start, end });
        }
        
        cancelAnimationFrame(this.frameRequest);
        this.frame = 0;
        this.update();
        return promise;
      }
      
      update() {
        let output = '';
        let complete = 0;
        
        for (let i = 0, n = this.queue.length; i < n; i++) {
          let { from, to, start, end, char } = this.queue[i];
          
          if (this.frame >= end) {
            complete++;
            output += to;
          } else if (this.frame >= start) {
            if (!char || Math.random() < 0.28) {
              char = this.randomChar();
              this.queue[i].char = char;
            }
            output += `<span class="dud">${char}</span>`;
          } else {
            output += from;
          }
        }
        
        this.el.innerHTML = output;
        
        if (complete === this.queue.length) {
          this.resolve();
        } else {
          this.frameRequest = requestAnimationFrame(this.update);
          this.frame++;
        }
      }
      
      randomChar() {
        return this.chars[Math.floor(Math.random() * this.chars.length)];
      }
    }    // Inicializar text scrambler quando a seção estiver visível
    const scramblerElement = document.querySelector('#scramble-text-top-{{ section.id }}');
    if (scramblerElement) {
      console.log('Text scrambler encontrado:', scramblerElement);
      const fx = new TextScramble(scramblerElement);      const originalText = scramblerElement.innerText;
      console.log('Texto original:', originalText);
      
      // Array de textos para fazer scramble
      const texts = [
        originalText,
        '{{ section.settings.scrambler_text_2 | default: "STREETWEAR CULTURE" }}',
        '{{ section.settings.scrambler_text_3 | default: "UNDERGROUND VIBES" }}'
      ];
      
      let counter = 0;
      
      // Função para executar scramble em sequência
      const next = () => {
        fx.setText(texts[counter]).then(() => {
          setTimeout(next, 2000);
        });
        counter = (counter + 1) % texts.length;
      };
      
      // Iniciar o ciclo
      next();
      
      // Configurar o ScrollTrigger para o text scrambler
      ScrollTrigger.create({
        trigger: scramblerElement.closest('.section'),
        start: 'top 80%',
        onEnter: () => {
          console.log('ScrollTrigger ativado para text scrambler');
          next();
        },
        onLeaveBack: () => fx.setText(''),
        onEnterBack: () => next()
      });
    } else {
      console.log('Text scrambler não encontrado com ID: scramble-text-top-{{ section.id }}');
    }// Configurar animação do vídeo na seção inferior
    const bottomVideo = document.querySelector('#section-video-{{ section.id }}');
    if (bottomVideo) {
      console.log('Vídeo encontrado:', bottomVideo.src);
      
      // Tentar carregar o vídeo imediatamente
      bottomVideo.load();
      
      // Configurar ScrollTrigger para o vídeo
      ScrollTrigger.create({
        trigger: bottomVideo.closest('.section'),
        start: 'top 90%',
        onEnter: () => {
          console.log('Iniciando reprodução do vídeo');
          bottomVideo.play().catch(e => {
            console.warn('Erro ao iniciar vídeo automaticamente:', e);
            // Fallback: mostrar vídeo mesmo se não conseguir dar play
            bottomVideo.style.opacity = '1';
          });
        },
        onLeave: () => {
          bottomVideo.pause();
        },
        onEnterBack: () => {
          bottomVideo.play().catch(e => console.log('Erro ao retomar vídeo:', e));
        },
        onLeaveBack: () => {
          bottomVideo.pause();
        }
      });
      
      // Event listeners para debug
      bottomVideo.addEventListener('loadstart', () => console.log('Vídeo começou a carregar'));
      bottomVideo.addEventListener('canplay', () => console.log('Vídeo pode ser reproduzido'));
      bottomVideo.addEventListener('error', (e) => console.error('Erro no vídeo:', e));
    } else {
      console.log('Nenhum vídeo encontrado na seção inferior');
    }
      // Animação para o text scrambler na seção superior (subindo)
    const scrambleContainer = document.querySelector('#cards-scroll-{{ section.id }} .text-scramble-container');
    if (scrambleContainer) {
      console.log('Container do scrambler encontrado:', scrambleContainer);
      
      // Mostrar imediatamente para debug
      scrambleContainer.style.opacity = '1';
      scrambleContainer.style.transform = 'translateY(0)';
      
      gsap.to(scrambleContainer, {
