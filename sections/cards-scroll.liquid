  Seção Cards Scroll - Baseada no exemplo do Codepen: https://codepen.io/GreenSock/pen/yyBKVxP
  Adaptada para trabalhar com o layout completo do site, incluindo header
{% endcomment %}

{% if section.settings.include_css %}
  {{ 'base.css' | asset_url | stylesheet_tag }}
{% endif %}

<div class="cards-scroll-wrapper" id="cards-scroll-{{ section.id }}">  {% if section.settings.show_top_section %}
    <div class="section gradient-{{ section.settings.top_section_color | default: 'green' }} top-section">
      {% if section.settings.top_section_video != blank %}
        <div class="video-container">
          {{ section.settings.top_section_video | video_tag: 
            autoplay: true, 
            loop: true, 
            muted: true, 
            playsinline: true, 
            controls: section.settings.show_video_controls, 
            class: 'top-section-video'
          }}
        </div>
      {% endif %}
    </div>
  {% endif %}
  
  <div class="section gradient-{{ section.settings.main_section_color | default: 'blue' }} cards-section">    <div class="title-container">
      {% if section.settings.title_svg != blank %}
        <div class="title-svg-container">
          {{ section.settings.title_svg | image_url: width: 800 | image_tag: class: 'title-svg' }}
        </div>
      {% else %}
        <h1>{{ section.settings.heading | default: "SERVICES" }}</h1>
      {% endif %}
    </div>
    
    <div class="cards-container">
      {% assign card_images = '' | split: '' %}
      {% if section.settings.card_image_1 != blank %}{% assign card_images = card_images | push: section.settings.card_image_1 %}{% endif %}
      {% if section.settings.card_image_2 != blank %}{% assign card_images = card_images | push: section.settings.card_image_2 %}{% endif %}
      {% if section.settings.card_image_3 != blank %}{% assign card_images = card_images | push: section.settings.card_image_3 %}{% endif %}
      {% if section.settings.card_image_4 != blank %}{% assign card_images = card_images | push: section.settings.card_image_4 %}{% endif %}
      {% if section.settings.card_image_5 != blank %}{% assign card_images = card_images | push: section.settings.card_image_5 %}{% endif %}
      {% if section.settings.card_image_6 != blank %}{% assign card_images = card_images | push: section.settings.card_image_6 %}{% endif %}
      {% if section.settings.card_image_7 != blank %}{% assign card_images = card_images | push: section.settings.card_image_7 %}{% endif %}
      {% if section.settings.card_image_8 != blank %}{% assign card_images = card_images | push: section.settings.card_image_8 %}{% endif %}
        {% if card_images.size > 0 %}
        {% for image in card_images %}
          <div class="card">
            {{ image | image_url: width: 350 | image_tag: width: 350, height: 450, loading: 'lazy', class: 'card-image' }}
          </div>
        {% endfor %}
        
        {% comment %} Duplicar cards se necessário para conteúdo de rolagem suficiente {% endcomment %}
        {% if section.settings.duplicate_cards and card_images.size < 8 %}
          {% for image in card_images %}
            <div class="card">
              {{ image | image_url: width: 350 | image_tag: width: 350, height: 450, loading: 'lazy', class: 'card-image' }}
            </div>
          {% endfor %}
        {% endif %}
      {% else %}
        {% comment %} Cards padrão com fundos gradientes {% endcomment %}
        <div class="card gradient-0"><div class="card-content">{{ section.settings.card_text_1 | default: "" }}</div></div>
        <div class="card gradient-1"><div class="card-content">{{ section.settings.card_text_2 | default: "" }}</div></div>
        <div class="card gradient-2"><div class="card-content">{{ section.settings.card_text_3 | default: "" }}</div></div>
        <div class="card gradient-3"><div class="card-content">{{ section.settings.card_text_4 | default: "" }}</div></div>
        <div class="card gradient-4"><div class="card-content">{{ section.settings.card_text_5 | default: "" }}</div></div>
